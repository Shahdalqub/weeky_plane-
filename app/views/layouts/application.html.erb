
<!DOCTYPE html>
<html>
  <head>
    <title>Weekly Planner</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_importmap_tags %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload" %>

    <!-- إضافة Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <div class="container">
      <!-- الشريط العلوي (Navbar) -->
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <%= link_to "Weekly Planner", root_path, class: "navbar-brand" %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to 'Log Out', destroy_user_session_path, method: :delete, data: { turbo: false }, class: "btn btn-outline-danger" %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Login", new_user_session_path, class: "btn btn-outline-primary" %>
              </li>
              <li class="nav-item">
                <%= link_to "Sign up", new_user_registration_path, class: "btn btn-outline-secondary" %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>

      <!-- المحتوى الرئيسي -->
      <div class="main-content">
        <h2 class="text-center mb-4">Your Weekly Plan</h2>
        <div class="task-list">
          <%= yield %>
        </div>
      </div>
    </div>

    <!-- إضافة Bootstrap JS وJQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>

